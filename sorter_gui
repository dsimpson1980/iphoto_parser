import sys
from PyQt4 import QtGui


class SorterGUI(QtGui.QWidget):

    def __init__(self):
        super(SorterGUI, self).__init__()
        self.initUI()

    def initUI(self):
        QtGui.QToolTip.setFont(QtGui.QFont('SansSerif', 10))

        self.setToolTip('This is a <b>QWidget</b> widget')

        open_button = QtGui.QPushButton('Open', self)
        open_button.setToolTip('Select an iphoto library to parse')
        open_button.resize(open_button.sizeHint())
        open_button.move(50, 50)

        self.setGeometry(300, 300, 250, 150)
        self.setWindowTitle('Tooltips')
        self.show()


def main():
    app = QtGui.QApplication(sys.argv)
    sorter = SorterGUI()
    sys.exit(app.exec_())


if __name__ == '__main__':
    main()